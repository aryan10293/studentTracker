<body id="form-body">
    <div id="container-form">
        <div id="another-container">
            <h1 id="add">Add Player</h1>
            <form action="/addPlayer" method="POST">
                <div class="idk">
                    <label class="label" for="name">Name:</label>
                    <input class="input" type="text" name="name" placeholder="Enter Name" required>
                </div>
                <div class="idk">
                    <label class="label" for="position">Postion:</label>
                    <input class="input" type="text" name="position" placeholder="Enter Position" required>
                </div>
                <div class="idk">
                    <label class="label" for="height">Height:</label>
                    <input class="input" type="text" id="height" name="height" placeholder="Enter Height" required>
                </div>
                <div class="idk">
                    <label class="label" for="weight">Weight:</label>
                    <input  class="input" type='number' id="weight" name="weight" placeholder="Enter Weight" required>
                </div>
                <div>
                    <button><a href="/">Cancel</a></button>
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>